<div class="mt-4 ml-4">
    <h3>Thêm quán cháo</h3>
    <form method="POST" action="/porridge/store">
        <div class="form-group">
            <label for="title">Tên quán cháo</label>
            <input type="text" class="form-control" id="title" name="title" required>
        </div>
        <div class="form-group">
            <label for="address">Địa chỉ quán cháo</label>
            <input type="text" class="form-control" id="address" name="address" required>
        </div>
        <div class="form-group">
            <label for="image">Link ảnh quán cháo</label>
            <input type="text" class="form-control" id="image" name="image" required>
        </div>
        <div class="form-group">
            <label for="sale">Sale</label>
            <input type="text" class="form-control" id="sale" name="sale" required>
        </div>
        <div class="form-group">
            <label>Trạng thái quán cháo</label>
            <br />
            <label for="on" class="cursor-pointer">Mở</label>
            <input type="radio" id="on" value="true" class="checkbox-inline mr-2" name="active" checked />
            <label for="off" class="cursor-pointer">Đóng</label>
            <input type="radio" id="off" value="false" class="checkbox-inline" name="active" />
        </div>
        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>